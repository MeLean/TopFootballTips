<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_tip_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_menu_dropdown_panel_holo_light">

    <LinearLayout
        android:id="@+id/match_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_macht_header_bg"
        android:orientation="horizontal"
        android:weightSum="12">

        <ImageView
            android:id="@+id/img_country_flag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:contentDescription="@string/country_image_desc"
            android:gravity="center" />

        <TextView
            android:id="@+id/tw_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="center"
            android:text="tw_country"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/match_details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_header_section"
        android:layout_marginTop="@dimen/space_tiny"
        android:padding="@dimen/space_small">

        <LinearLayout
            android:id="@+id/match_name_date_coef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="12">
            <TextView
                android:id="@+id/tw_match_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="tw_match_date"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tw_match"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="tw_match"
                android:gravity="center" />

            <TextView
                android:id="@+id/tw_coef"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="tw_coef"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_name_date_coef"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tw_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tw_result"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tw_tip"
            android:layout_below="@+id/match_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small"
            android:textStyle="bold"
            android:text="tw_tip"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>